<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@string/imageDescription"
            app:srcCompat="@drawable/logo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/editTextMailRegistration"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/editTextMail"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center" >

            <EditText
                android:id="@+id/editTextPasswordRegistration"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/editTextPassword"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/buttonRegistration"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_buttons"
                android:text="@string/buttonLogin" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/textViewSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textViewRegistration"
                android:textAlignment="center"
                android:textSize="17sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>