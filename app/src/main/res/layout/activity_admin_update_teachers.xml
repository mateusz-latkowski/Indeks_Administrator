<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminUpdateTeachers">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewUpdate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Aktualizuj dane"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Imię/Imiona"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="text"
                    android:hint="Imię" />

                <TextView
                    android:id="@+id/textViewSurnameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Nazwisko"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextSurname"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="text"
                    android:hint="Nazwisko" />

                <TextView
                    android:id="@+id/textViewAcademicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Tytuł"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextAcademicTitle"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="text"
                    android:hint="Tytuł" />

                <TextView
                    android:id="@+id/textViewRoomTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Pokój"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextRoom"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="text"
                    android:hint="Pokój" />

                <TextView
                    android:id="@+id/textViewPhoneNumberTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Numer telefonu"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="phone"
                    android:hint="Numer telefonu" />

                <TextView
                    android:id="@+id/textViewEmailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Email"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="text"
                    android:hint="Email" />

                <TextView
                    android:id="@+id/textViewUserIDTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="ID"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/editTextUserID"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:background="@drawable/rounded_inputs"
                    android:inputType="none"
                    android:hint="ID" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewActivateAccountTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="20sp"
                            android:text="Status konta" />

                        <Switch
                            android:id="@+id/switchActivateAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:checked="false" />

                </RelativeLayout>

                <Button
                    android:id="@+id/buttonUpdateTeacherInfo"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_buttons"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Aktualizuj" />

        </LinearLayout>
</ScrollView>